{
  "compilerOptions": {
    "lib": [
      "DOM",
      "ES2015"
    ],
    "pretty": true,
    "strict": true,
    "newLine": "lf",
    "target": "ES5",
    "module": "ESNext",
    "skipLibCheck": true,
    "importHelpers": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules/**/*"
  ]
}

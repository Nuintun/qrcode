{
  "compileOnSave": false,
  "compilerOptions": {
    "pretty": true,
    "target": "es5",
    "newLine": "LF",
    "module": "esnext",
    "declaration": true,
    "alwaysStrict": true,
    "importHelpers": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "declarationDir": "typings",
    "forceConsistentCasingInFileNames": true,
    "lib": ["es5", "esnext", "dom", "scripthost"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}

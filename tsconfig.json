{
  "compilerOptions": {
    "lib": [
      "DOM",
      "ES2015"
    ],
    "baseUrl": ".",
    "pretty": true,
    "strict": true,
    "newLine": "lf",
    "target": "ES2015",
    "module": "ESNext",
    "skipLibCheck": true,
    "importHelpers": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "noImplicitOverride": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules/**/*"
  ]
}

{
  "compileOnSave": false,
  "compilerOptions": {
    "pretty": true,
    "strict": true,
    "target": "ES5",
    "newLine": "lf",
    "module": "ESNext",
    "declaration": false,
    "importHelpers": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "Node",
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
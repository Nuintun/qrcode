{
  "compilerOptions": {
    "baseUrl": ".",
    "noEmit": true,
    "strict": true,
    "allowJs": true,
    "newLine": "lf",
    "jsx": "preserve",
    "module": "ESNext",
    "target": "ESNext",
    "incremental": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "/js/*": [
        "src/js/*"
      ],
      "/css/*": [
        "src/css/*"
      ],
      "/images/*": [
        "src/images/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "global.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}

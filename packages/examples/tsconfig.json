{
  "compilerOptions": {
    "baseUrl": ".",
    "noEmit": true,
    "strict": true,
    "allowJs": true,
    "newLine": "lf",
    "jsx": "preserve",
    "module": "ESNext",
    "target": "ESNext",
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "noImplicitOverride": true,
    "noUnusedParameters": true,
    "useDefineForClassFields": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "DOM",
      "ESNext",
      "WebWorker"
    ],
    "paths": {
      "/js/*": [
        "src/js/*"
      ],
      "/css/*": [
        "src/css/*"
      ],
      "/images/*": [
        "src/images/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "global.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
